---
import MainLayout from '../../layouts/MainLayout.astro';

// Datos de ejemplo (deberían venir de una API)
const instructors = [
  {
    id: 1,
    name: "Andreina Ustate",
    email: "austate@uniempresarial.edu.co",
    phone: "3052512922",
    specialty: "Finanzas corporativas",
    events: 12
  },
  {
    id: 2,
    name: "Julie Sáenz Castañeda",
    email: "jsaenzc@uniempresarial.edu.co",
    phone: "3118131235",
    specialty: "Innovación y emprendimiento",
    events: 8
  },
  {
    id: 3,
    name: "Tatiana Prieto",
    email: "tprieto@uniempresarial.edu.co",
    phone: "3012748031",
    specialty: "Marketing y ventas",
    events: 15
  },
];
---

<MainLayout title="Instructores">
  <div class="bg-white p-6 rounded-lg shadow">
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-xl font-semibold text-secondary">Lista de Instructores</h2>
      <a 
        href="/instructores/nuevo" 
        class="flex items-center bg-primary text-white px-4 py-2 rounded hover:bg-red-700 transition-colors"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd" />
        </svg>
        Nuevo Instructor
      </a>
    </div>
    
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Nombre
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Especialidad
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Contacto
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Eventos
            </th>
            <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
              Acciones
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          {instructors.map(instructor => (
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center">
                  <div class="flex-shrink-0 h-10 w-10 rounded-full bg-complement flex items-center justify-center text-white font-bold">
                    {instructor.name.charAt(0)}
                  </div>
                  <div class="ml-4">
                    <div class="text-sm font-medium text-gray-900">{instructor.name}</div>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900">{instructor.specialty}</div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900">{instructor.email}</div>
                <div class="text-sm text-gray-500">{instructor.phone}</div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                  {instructor.events} eventos
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <a href={`/instructores/${instructor.id}`} class="text-primary hover:text-red-700 mr-4">
                  Editar
                </a>
                <button class="text-red-600 hover:text-red-900">
                  Eliminar
                </button>
              </td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>
  </div>
</MainLayout>